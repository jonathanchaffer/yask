{
  "compilerOptions": {
    "target": "es2019",
    "module": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "types": ["vitest/globals"],
    "declaration": true,
    "lib": ["es2017", "dom"],
    "baseUrl": ".",
    "paths": { "~/*": ["src/*"] }
  },
  "include": ["src"]
}
